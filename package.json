{
  "name": "pocketdragon",
  "private": true,
  "version": "0.0.0-development",
  "description": "The companion app for the boardgame PocketDragon",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "stencil build --prerender",
    "dev": "stencil build --dev --watch --serve",
    "lint": "npx tslint --project . -t stylish -c tslint.js 'src/**/*.{ts,tsx}'",
    "lint:fix": "npx tslint --project . -t verbose --fix -c tslint.js 'src/**/*.{ts,tsx}'",
    "lint:lintfile": "npx tslint -t stylish -c tslint.js 'tslint.js'",
    "lint:lintfile:fix": "npx tslint --fix -t stylish -c tslint.js 'tslint.js'",
    "prepublishOnly": "npm run build",
    "semantic-release": "semantic-release",
    "serve": "stencil-dev-server",
    "start": "npm run dev",
    "test": "jest",
    "test.watch": "jest --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "dependencies": {
    "@stencil/core": "0.10.0-9",
    "@stencil/router": "^0.2.2"
  },
  "devDependencies": {
    "@types/jest": "^21.1.1",
    "husky": "^1.0.0-rc.9",
    "jest": "^21.2.1",
    "prettier": "^1.13.7",
    "semantic-release": "^15.6.0",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "tslint-eslint-rules": "^5.3.1",
    "tslint-plugin-prettier": "^1.3.0",
    "tslint-react": "^3.6.0",
    "tslint-sonarts": "^1.7.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/playtest-hq/pocketdragon.git"
  },
  "author": "Adrian Schmidt",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/playtest-hq/pocketdragon"
  },
  "homepage": "https://github.com/playtest-hq/pocketdragon",
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/@stencil/core/testing/jest.preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ]
  }
}
